<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="620.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.medeasedesktop.PatientDashboardController"
            styleClass="dash-root">

    <stylesheets>
        <URL value="@css/admindashboard.css"/>
    </stylesheets>

    <top>
        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="topbar">
            <Label text="MedEase" styleClass="topbar-title"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="patientNameLabel" text="Patient" styleClass="topbar-user"/>
            <MenuButton text="Menu" styleClass="topbar-menu">
                <items>
                    <MenuItem text="Logout" onAction="#handleLogout"/>
                    <MenuItem text="Exit" onAction="#handleExit"/>
                </items>
            </MenuButton>
        </HBox>
    </top>

    <left>
        <VBox spacing="10" styleClass="sidebar">
            <Button maxWidth="Infinity" text="Search Doctors" onAction="#showSearch" styleClass="nav-btn"/>
            <Button maxWidth="Infinity" text="My Appointments" onAction="#showMyAppointments" styleClass="nav-btn"/>
            <Region VBox.vgrow="ALWAYS"/>
            <Label text="Patient Workspace" styleClass="sidebar-foot"/>
        </VBox>
    </left>

    <center>
        <BorderPane fx:id="contentHolder" styleClass="content"/>
    </center>

</BorderPane>
