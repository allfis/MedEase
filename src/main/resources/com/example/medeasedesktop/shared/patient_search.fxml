<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="12"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      styleClass="content-card">

    <Label text="Patient Records" styleClass="h1"/>

    <HBox spacing="10">
        <TextField promptText="Search by ID"/>
        <TextField promptText="Search by Name"/>
        <TextField promptText="Search by Phone"/>
        <Button text="Search"/>
    </HBox>

    <TableView prefHeight="320">
        <columns>
            <TableColumn text="Patient ID"/>
            <TableColumn text="Name"/>
            <TableColumn text="Phone"/>
            <TableColumn text="Gender"/>
            <TableColumn text="Age"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button text="View Details"/>
        <Button text="Refresh"/>
    </HBox>

</VBox>
