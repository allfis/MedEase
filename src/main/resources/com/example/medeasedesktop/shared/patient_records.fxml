<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.medeasedesktop.PatientRecordsController">

    <VBox spacing="12" AnchorPane.topAnchor="16" AnchorPane.leftAnchor="16"
          AnchorPane.rightAnchor="16" AnchorPane.bottomAnchor="16">

        <Label text="Patient Records" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

        <HBox spacing="10">
            <TextField fx:id="searchIdField" promptText="Search by ID" />
            <TextField fx:id="searchNameField" promptText="Search by Name" />
            <TextField fx:id="searchPhoneField" promptText="Search by Phone" />
            <Button text="Search" onAction="#search" />
            <Button text="Refresh" onAction="#refresh" />
        </HBox>

        <TableView fx:id="patientTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idCol" text="Patient ID" prefWidth="90" />
                <TableColumn fx:id="nameCol" text="Name" prefWidth="220" />
                <TableColumn fx:id="phoneCol" text="Phone" prefWidth="160" />
                <TableColumn fx:id="genderCol" text="Gender" prefWidth="120" />
                <TableColumn fx:id="ageCol" text="Age" prefWidth="80" />
            </columns>
        </TableView>

        <HBox spacing="10">
            <Button text="Add Patient" onAction="#addPatient" />
            <Button text="View Details" onAction="#viewDetails" />
            <Button text="Delete Selected" onAction="#deleteSelected" />
        </HBox>

    </VBox>
</AnchorPane>
