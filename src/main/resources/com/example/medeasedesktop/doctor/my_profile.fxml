<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="14"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.medeasedesktop.DoctorProfileController"
      styleClass="content-card">

    <VBox spacing="4">
        <Label text="My Profile &amp; Ratings" styleClass="h1"/>
        <Label text="Update your profile and view your rating summary." styleClass="muted"/>
    </VBox>

    <GridPane hgap="12" vgap="12">
        <columnConstraints>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="75"/>
        </columnConstraints>

        <Label text="Full Name" styleClass="field-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="fullNameField" promptText="Dr. Name" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Email" styleClass="field-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" promptText="doctor@email.com" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Phone" styleClass="field-label" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="phoneField" promptText="+94..." GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Specialty" styleClass="field-label" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="specialtyField" promptText="Cardiology / Dermatology ..." GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="About" styleClass="field-label" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextArea fx:id="aboutArea" prefRowCount="3" promptText="Short bio..." GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10">
        <Button text="Save Changes" onAction="#save" style="-fx-background-color: #0E3A4A; -fx-text-fill: #F8FAF9;"/>
        <Button text="Reset" onAction="#reset" style="-fx-background-color: #0E3A4A; -fx-text-fill: #F8FAF9;"/>
    </HBox>

    <Separator/>

    <GridPane hgap="12" vgap="12">
        <columnConstraints>
            <ColumnConstraints percentWidth="33"/>
            <ColumnConstraints percentWidth="33"/>
            <ColumnConstraints percentWidth="33"/>
        </columnConstraints>

        <VBox spacing="6" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="stat-card">
            <Label text="Average Rating" styleClass="stat-title"/>
            <Label fx:id="avgRatingLabel" text="0.0" styleClass="stat-value"/>
            <Label text="Out of 5" styleClass="stat-sub"/>
        </VBox>

        <VBox spacing="6" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="stat-card">
            <Label text="Total Reviews" styleClass="stat-title"/>
            <Label fx:id="totalReviewsLabel" text="0" styleClass="stat-value"/>
            <Label text="All time" styleClass="stat-sub"/>
        </VBox>

        <VBox spacing="6" GridPane.rowIndex="0" GridPane.columnIndex="2" styleClass="stat-card">
            <Label text="This Month" styleClass="stat-title"/>
            <Label fx:id="monthReviewsLabel" text="0" styleClass="stat-value"/>
            <Label text="New reviews" styleClass="stat-sub"/>
        </VBox>
    </GridPane>

    <VBox spacing="10">
        <Label text="Recent Feedback" styleClass="stat-title"/>
        <TableView fx:id="feedbackTable" prefHeight="200">
            <columns>
                <TableColumn fx:id="dateCol" text="Date"/>
                <TableColumn fx:id="ratingCol" text="Rating"/>
                <TableColumn fx:id="commentCol" text="Comment"/>
            </columns>
        </TableView>
    </VBox>

</VBox>
