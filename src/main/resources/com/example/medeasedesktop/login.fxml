<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500.0" prefWidth="700.0"
            styleClass="root-pane"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.medeasedesktop.LoginController">

    <stylesheets>
        <URL value="@css/login.css"/>
    </stylesheets>

    <VBox alignment="CENTER" spacing="18"
          AnchorPane.topAnchor="40" AnchorPane.bottomAnchor="40"
          AnchorPane.leftAnchor="110" AnchorPane.rightAnchor="110"
          styleClass="login-card">

        <HBox alignment="CENTER" spacing="12">
            <ImageView fitHeight="62" fitWidth="62" preserveRatio="true">
                <image>
                    <Image url="@images/app.jpg"/>
                </image>
            </ImageView>
            <VBox alignment="CENTER_LEFT" spacing="2">
                <Label text="MedEase" styleClass="app-title"/>
                <Label text="Doctor / Admin Desktop" styleClass="app-subtitle"/>
            </VBox>
        </HBox>

        <VBox spacing="10" styleClass="block">
            <Label text="Select Role" styleClass="field-label"/>
            <HBox alignment="CENTER" spacing="18">
                <RadioButton fx:id="doctorRadio" text="Doctor" styleClass="role-radio">
                    <toggleGroup>
                        <ToggleGroup fx:id="roleGroup"/>
                    </toggleGroup>
                </RadioButton>
                <RadioButton fx:id="adminRadio" text="Admin" toggleGroup="$roleGroup" styleClass="role-radio"/>
            </HBox>
        </VBox>

        <VBox spacing="10" styleClass="block">
            <Label text="Gmail" styleClass="field-label"/>
            <TextField fx:id="emailField" promptText="example@gmail.com"/>

            <Label text="Password" styleClass="field-label"/>
            <StackPane>
                <PasswordField fx:id="passwordField" promptText="Enter password"/>
                <TextField fx:id="showPasswordField" promptText="Enter password" visible="false" managed="false"/>
            </StackPane>

            <CheckBox fx:id="showPasswordCheck" text="Show password" onAction="#togglePassword"/>
        </VBox>

        <Button text="Login" prefWidth="220" onAction="#handleLogin" styleClass="primary-btn"/>

    </VBox>
</AnchorPane>
