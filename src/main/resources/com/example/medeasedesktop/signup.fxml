<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400" prefWidth="600" styleClass="root-pane"
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.medeasedesktop.SignupController">

    <stylesheets>
        <URL value="@css/login.css" />
    </stylesheets>

    <VBox alignment="CENTER" prefWidth="380" spacing="14" styleClass="login-card"
          AnchorPane.bottomAnchor="40" AnchorPane.leftAnchor="110"
          AnchorPane.rightAnchor="110" AnchorPane.topAnchor="40">

        <Label styleClass="app-title" text="Create Patient Account">
            <font><Font size="26"/></font>
        </Label>

        <TextField fx:id="nameField" promptText="Full Name"/>
        <TextField fx:id="emailField" promptText="Email"/>
        <TextField fx:id="phoneField" promptText="Phone"/>

        <PasswordField fx:id="passwordField" promptText="Password"/>
        <PasswordField fx:id="confirmField" promptText="Confirm Password"/>

        <Button onAction="#handleSignup" prefWidth="180" text="Sign Up"/>
        <Button onAction="#goBack" prefWidth="180" text="Back to Login"/>

        <Label fx:id="statusLabel" styleClass="muted" text=""/>
    </VBox>
</AnchorPane>
