<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="16"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.medeasedesktop.SystemMonitoringController">

    <VBox spacing="4">
        <Label text="System Monitoring"/>
        <Label text="Today overview + recent activity."/>
    </VBox>

    <HBox spacing="16">
        <VBox spacing="6" prefWidth="180"
              style="-fx-border-color:#cccccc; -fx-border-radius:6; -fx-padding:12;">
            <Label text="Today Appointments"/>
            <Label fx:id="todayAppointmentsLabel" text="0"/>
        </VBox>

        <VBox spacing="6" prefWidth="180"
              style="-fx-border-color:#cccccc; -fx-border-radius:6; -fx-padding:12;">
            <Label text="Approved"/>
            <Label fx:id="approvedLabel" text="0"/>
        </VBox>

        <VBox spacing="6" prefWidth="180"
              style="-fx-border-color:#cccccc; -fx-border-radius:6; -fx-padding:12;">
            <Label text="Rejected / Cancelled"/>
            <Label fx:id="rejectedCancelledLabel" text="0"/>
        </VBox>
    </HBox>

    <HBox spacing="16">
        <VBox spacing="6" prefWidth="180"
              style="-fx-border-color:#cccccc; -fx-border-radius:6; -fx-padding:12;">
            <Label text="Active Doctors"/>
            <Label fx:id="activeDoctorsLabel" text="0"/>
        </VBox>

        <VBox spacing="6" prefWidth="180"
              style="-fx-border-color:#cccccc; -fx-border-radius:6; -fx-padding:12;">
            <Label text="On Leave Today"/>
            <Label fx:id="onLeaveLabel" text="0"/>
        </VBox>

        <VBox spacing="6" prefWidth="180"
              style="-fx-border-color:#cccccc; -fx-border-radius:6; -fx-padding:12;">
            <Label text="New Reviews"/>
            <Label fx:id="newReviewsLabel" text="0"/>
        </VBox>
    </HBox>

    <Separator/>

    <VBox spacing="8">
        <Label text="Recent Activity"/>

        <TableView fx:id="activityTable" prefHeight="240">
            <columns>
                <TableColumn fx:id="timeCol" prefWidth="170" text="Time"/>
                <TableColumn fx:id="eventCol" prefWidth="200" text="Event"/>
                <TableColumn fx:id="userCol" prefWidth="220" text="User"/>
                <TableColumn fx:id="detailsCol" prefWidth="320" text="Details"/>
            </columns>
        </TableView>
    </VBox>

</VBox>
