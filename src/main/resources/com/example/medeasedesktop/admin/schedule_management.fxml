<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.medeasedesktop.ScheduleManagementController"
      spacing="12">

    <padding>
        <Insets top="12" right="12" bottom="12" left="12"/>
    </padding>

    <Label text="Schedule Management"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Doctor:"/>
        <ComboBox fx:id="doctorCombo" prefWidth="280"/>

        <Label text="Day:"/>
        <ComboBox fx:id="dayCombo" prefWidth="160"/>

        <Label text="Type:"/>
        <ComboBox fx:id="typeCombo" prefWidth="140"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Start:"/>
        <TextField fx:id="startField" promptText="09:00" prefWidth="90"/>

        <Label text="End:"/>
        <TextField fx:id="endField" promptText="17:00" prefWidth="90"/>

        <Button text="Add" onAction="#onAdd"/>
        <Button text="Update Selected" onAction="#onUpdateSelected"/>
        <Button text="Delete Selected" onAction="#onDeleteSelected"/>
        <Button text="Refresh" onAction="#onRefresh"/>
    </HBox>

    <TableView fx:id="table" prefHeight="320">
        <columns>
            <TableColumn fx:id="colDoctor" text="Doctor" prefWidth="240"/>
            <TableColumn fx:id="colDay" text="Day" prefWidth="120"/>
            <TableColumn fx:id="colStart" text="Start" prefWidth="90"/>
            <TableColumn fx:id="colEnd" text="End" prefWidth="90"/>
            <TableColumn fx:id="colType" text="Type" prefWidth="120"/>
            <TableColumn fx:id="colCreated" text="Created" prefWidth="170"/>
        </columns>
    </TableView>

</VBox>
