<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.medeasedesktop.ReviewsController"
      spacing="12">

    <padding>
        <Insets top="12" right="12" bottom="12" left="12"/>
    </padding>

    <Label text="Reviews"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Doctor:"/>
        <ComboBox fx:id="doctorCombo" prefWidth="240"/>

        <Label text="Min Rating:"/>
        <ComboBox fx:id="minRatingCombo" prefWidth="120"/>

        <Button text="Filter" onAction="#onFilter"/>
        <Button text="Reset" onAction="#onReset"/>
        <Button text="Refresh" onAction="#onRefresh"/>
    </HBox>

    <TableView fx:id="table" prefHeight="340">
        <columns>
            <TableColumn fx:id="colDoctor" text="Doctor" prefWidth="180"/>
            <TableColumn fx:id="colPatient" text="Patient" prefWidth="180"/>
            <TableColumn fx:id="colRating" text="Rating" prefWidth="80"/>
            <TableColumn fx:id="colComment" text="Comment" prefWidth="360"/>
            <TableColumn fx:id="colCreated" text="Created" prefWidth="170"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="Delete Selected" onAction="#onDeleteSelected"/>
    </HBox>

</VBox>
